<canvas id="myChart" style="width:100%;max-width:700px"></canvas>

<script>
    function addZero(i) {
        if (i < 10) { i = "0" + i }
        return i;
    }

    function GetTime() {
        const d = new Date();
        let h = addZero(d.getHours());
        let m = addZero(d.getMinutes());
        let s = addZero(d.getSeconds());
        let time = h + ":" + m + ":" + s;
        return time;
    }

    function GetMarketPrice() {
        var xValues = [15, 10, 36, 3, 24, 14, 18];
        var yValues = [15, 10, 36, 3, 24, 14, 18];
        var color = "";
        var temp = "0";

        setInterval(function () {
            $.ajax({
                type: 'POST',
                url: '../Stocks/GetMarketPrice',
                success: function (data) {
                    $('#txtMP').val(data);

                    if (xValues.length > 15) {
                        xValues.shift();
                        yValues.shift();
                    }

                    xValues.push(GetTime());
                    yValues.push(data);
                    if (data > temp)
                    {
                        color = "rgba(4,170,109,1)"; //green
                    }
                    else
                    {
                        color = "rgba(255,8,8,1)"; //red
                    }

                    temp = data;

                    var myChart = new Chart("myChart", {
                        type: "line",
                        data: {},
                        options: {}
                    });

                    new Chart("myChart", {
                        type: "line",
                        data: {
                            labels: xValues,
                            datasets: [{
                                label: 'Market Price Monitor',
                                fill: false,
                                lineTension: 0,
                                borderColor: color,
                                data: yValues
                            }]
                        },
                        options: {
                            legend: { display: true },
                            scales: {
                                yAxes: [{ ticks: { min: 1, max: 100 } }],
                            }
                        }
                    });
                },
                error: function () { }
            });
        }, 2000);

    }

    GetMarketPrice();
</script>