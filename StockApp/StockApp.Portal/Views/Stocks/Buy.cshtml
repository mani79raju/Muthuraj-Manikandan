@model StockBuyViewModel

<div class="row">
    <div class="col-lg-4">
        <div class="row">
        <div class="col-md-12">
            <form id="buyForm" method="post">
                <h2>Buy</h2>
                <hr />
                <input asp-for="@Model.StockId" type="hidden" value="@Model.StockId" class="form-control" aria-required="true" />
                <input asp-for="@Model.AddDateTimeLocal" type="hidden" id="hidLocalTime" class="form-control" aria-required="true" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model.Exchange" readonly class="form-control" aria-required="true" />
                    <label asp-for="@Model.Exchange">Exchange</label>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.StockName" readonly class="form-control" aria-required="true" />
                    <label asp-for="@Model.StockName">Stock name</label>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.StockCode" readonly class="form-control" aria-required="true" />
                    <label asp-for="@Model.StockCode">Stock Code</label>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.MarketPrice" id="txtMP" readonly class="form-control" aria-required="true" />
                    <label asp-for="@Model.MarketPrice">Market Price</label>
                </div>
                <div class="form-floating">
                    <label asp-for="BuyTypes" style="margin-top: -16px;font-size: 14px;color: #959699;">Buy Type</label>
                    <div class="form-control">
                        @foreach (var buyType in Model.BuyTypes)
                        {
                            <input type="radio" name="buyTyperadio" onchange="setBuyTypes('@buyType')" aria-required="true" /> @buyType
                        }
                    <input asp-for="@Model.BuyType" type="hidden" id="hidbuyTypes" class="form-control" aria-required="true" />
                    </div>
                </div>
                <div class="form-floating">
                    <input type="number" id="buyCount" asp-for="@Model.BuyCount" class="form-control" aria-required="true" />
                    <label asp-for="@Model.BuyCount">Count</label>
                    <span asp-validation-for="@Model.BuyCount" class="text-danger"></span>
                </div>
            
                <input id="buySubmit" type="submit" asp-controller="Stocks" asp-action="Buy" onclick="return buyClick()" class="w-100 btn btn-lg btn-primary" value="Buy" />
            </form>
        </div>
    </div>
    </div>
    <div class="col-lg-8">
        @Html.Partial("../PartialViews/StockLineChart.cshtml")
    </div>
</div>
            <script>
    function setBuyTypes(buyType)
    {
        $('#hidbuyTypes').val(buyType);
    }

    function buyClick()
    {
        if ($('#hidbuyTypes').val()=='')
        {
            toastr.error('Select Buy Type');
            return false;
        }

        if ($('#buyCount').val() == '0' || $('#buyCount').val() == '') {
            toastr.error('Enter the number of count');
            return false;
        }

        if ($('#buyCount').val().includes('.') || $('#buyCount').val().includes('-')) {
            toastr.error('Enter the valid number of count');
            return false;
        }

        $('#hidLocalTime').val(new Date().toLocaleString());
        return true;
    }


    document.addEventListener("DOMContentLoaded", () => {
        $('.footer').css('position', 'relative');
    });
   
   
        
    
        
            </script>
        