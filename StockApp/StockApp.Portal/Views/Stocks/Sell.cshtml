@model StockSellViewModel
<div class="row">
    <div class="col-lg-4">
        <div class="row">
            <div class="col-md-12">
        <form id="buyForm" method="post">
            <h2>Sell</h2>
            <hr />
            <input asp-for="@Model.StockId" type="hidden" value="@Model.StockId" class="form-control" aria-required="true" />
            <input asp-for="@Model.AddDateTimeLocal" type="hidden" id="hidLocalTime" class="form-control" aria-required="true" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Exchange" readonly class="form-control" aria-required="true" />
                <label asp-for="@Model.Exchange">Exchange</label>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.StockName" readonly class="form-control" aria-required="true" />
                <label asp-for="@Model.StockName">Stock Name</label>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.StockCode" readonly class="form-control" aria-required="true" />
                <label asp-for="@Model.StockCode">Stock Code</label>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.MarketPrice" id="txtMP" readonly class="form-control" aria-required="true" />
                <label asp-for="@Model.MarketPrice">Market Price</label>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.AvailableCount" readonly class="form-control" aria-required="true" />
                <label asp-for="@Model.AvailableCount">Available</label>
            </div>
            <div class="form-floating">
                <input type="number" asp-for="@Model.SellCount" class="form-control" aria-required="true" />
                <label asp-for="@Model.SellCount">Count</label>
                <span asp-validation-for="@Model.SellCount" class="text-danger"></span>
            </div>

            <button id="sellSubmit" type="submit" asp-controller="Stocks" asp-action="Sell" onclick="sellClick()" class="w-100 btn btn-lg btn-primary">Sell</button>
        </form>
    </div>
        </div>
    </div>
    <div class="col-lg-8">
        @Html.Partial("../PartialViews/StockLineChart.cshtml")
    </div>
</div>

                <script>
    function sellClick() {
        $('#hidLocalTime').val(new Date().toLocaleString());
    }
    
                </script>